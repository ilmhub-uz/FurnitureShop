@page "/organizations"
@inject HttpClient Http

<PageTitle>Organizations</PageTitle>

<div class="container">
    <MudText Typo="Typo.h3" Class="text-center">Organizations</MudText>
    <div class="organizations">
        <div class="organization">
            <MudLink Href="category">
                <h3 class="text-center">Apple</h3>
                <img src="data:image/png;base64,"
                     alt="aple" />
            </MudLink>
        </div>
        <div class="organization">
            <MudLink Href="category">
                <h3 class="text-center">
                    Xiaomi
                </h3>
                <img src="https://i.pinimg.com/736x/f2/35/62/f23562f57c5ee08623a044eeaea3b36d.jpg"
                     alt="mi" />
            </MudLink>
        </div>
        <div class="organization">
            <MudLink Href="category">
                <h3 class="text-center">
                    Samsung
                </h3>
                <img src="https://cdn.freebiesupply.com/logos/large/2x/samsung-4-logo-png-transparent.png"
                     alt="samsung" />
            </MudLink>

        </div>
        <div class="organization">
            <MudLink Href="category">
                <h3 class="text-center">
                    Huawei
                </h3>
                <img src="https://i0.wp.com/www.dafontfree.io/wp-content/uploads/2021/08/Huawei-Logo-Font.jpg?fit=1062%2C728&ssl=1"
                     alt="huawei" />
            </MudLink>
        </div>
        @foreach (var organizations in organizationsView)
            {<div class="organization">
                <MudLink Href="category">
                    <h3 class="text-center">@organizations.Name</h3>
                    <img src="data:image/png;base64,"
                        alt="aple" />
                </MudLink>
            </div> 
            }
    </div>
    
                
</div>

<style>
    .text-center {
        text-align: center;
        padding: 18px 0px;
    }

    .container {
        padding: 10px 0px;
    }

    .organizations {
        display: flex;
        justify-content: space-between;
    }

    .organization {
        padding: 10px;
        box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
        border-radius: 18px;
        width: 280px;
    }

    img {
        width: 100%;
        padding: 10px 0px 0px 0px;
    }
</style>

@code {
    private OrganizationView[]? organizationsView;

    protected override async Task OnInitializedAsync()
    {
        organizationsView = await Http.GetFromJsonAsync<OrganizationView[]>("https://localhost:7235/api/Organizations");
    }
}
