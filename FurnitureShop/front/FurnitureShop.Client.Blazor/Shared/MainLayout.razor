@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.AddShoppingCart" />
        <MudIconButton Icon="@Icons.Material.Filled.Bookmark" />
        <MudIconButton Href="/login" Icon="@Icons.Material.Filled.Login" />
        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Client</MudText>
        </MudDrawerHeader>
        <NavMenu />

    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    public string Search { get; set; }
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}