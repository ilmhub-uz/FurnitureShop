@page "/products"
@inject HttClient Http

<PageTitle>Products</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Products</MudText>
@* Products da productlarni rasmi, nomi, kichik descriptioni, narxi,
    2 ta button (- va +) agar productni bosganda boshqa page ochilib propertiylarini ham ko`rsatsin. *@

<MudCard>
    <MudCardMedia Src="https://www.apple.com/uz/iphone/home/images/meta/iphone__btp62hy2cbea_og.png" Height="200" Style="width: 100%" />
    <MudCardContent>
        <MudText Typo="Typo.h5">Old Paint</MudText>
        <MudText Typo="Typo.body2">Old paint found on a stone house door.</MudText>
        <MudText Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Share</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
    </MudCardActions>
</MudCard>

@code {
    private List<ProductView> productViews;
    
    protected override async Task OnInitialzedAsync()
    {
        productViews = Http.GetFromJsonAsync<List<ProductView>("https://localhost:7235/api/Products");
    }

    
}
